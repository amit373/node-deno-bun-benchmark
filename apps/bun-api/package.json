{
  "name": "@student-api/bun-api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "PATH=\"$HOME/.bun/bin:$PATH\" bun --watch src/index.ts",
    "build": "tsc",
    "start": "bun run dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "bun test",
    "benchmark": "bun src/benchmark.ts",
    "seed": "bun src/seed.ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@elysiajs/swagger": "^1.3.1",
    "@student-api/shared-config": "workspace:*",
    "@student-api/shared-constants": "workspace:*",
    "@student-api/shared-logger": "workspace:*",
    "@student-api/shared-middleware": "workspace:*",
    "@student-api/shared-types": "workspace:*",
    "@student-api/shared-utils": "workspace:*",
    "@student-api/shared-zod-schemas": "workspace:*",
    "elysia": "^1.4.19",
    "mongodb": "^6.3.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@student-api/eslint-config": "workspace:*",
    "@student-api/tsconfig": "workspace:*",
    "@types/node": "^20.10.6",
    "bun-types": "^1.0.21",
    "typescript": "^5.3.3"
  }
}
