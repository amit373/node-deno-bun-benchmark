  "imports": {
    "@student-api/shared-config": "../../packages/shared-config/src/index.ts",
    "@student-api/shared-constants": "../../packages/shared-constants/src/index.ts",
    "@student-api/shared-logger": "../../packages/shared-logger/src/index.ts",
    "@student-api/shared-types": "../../packages/shared-types/src/index.ts",
    "@student-api/shared-utils": "../../packages/shared-utils/src/index.ts",
